---
import { type TProps } from "@components/BasicPopover/BasicPopover.types";
import mergeAttributes from "@scripts/helpers/mergeAttributes";
import VueBasicPopover from "@components/BasicPopover/VueBasicPopover.vue";

const props: TProps = Astro.props;
const attributes = mergeAttributes({}, props.attributes);
---

<VueBasicPopover
  {...attributes}
  position={props.position}
  button={props.button}
  panel={props.panel}
  client:load
>
  <slot name="button" slot="button" />
  <slot name="panel" slot="panel" />
</VueBasicPopover>
