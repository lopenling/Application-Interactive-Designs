---
import { type TProps } from "@components/ComboBox/ComboBox.types";
import mergeAttributes from "@scripts/helpers/mergeAttributes";

import VueComboBox from "@components/ComboBox/VueComboBox.vue";

const props: TProps = Astro.props;
const attributes = mergeAttributes({}, props.attributes);
---

<VueComboBox
  {...attributes}
  storeKey={props.storeKey}
  options={props.options}
  label={props.label}
  input={props.input}
  client:load
/>
