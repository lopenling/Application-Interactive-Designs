---
import { type TMetaInformation, type TRole } from "@lib/types";
import getRole from "@scripts/helpers/getRole";

import LayoutSettings from "@layouts/LayoutSettings.astro";
import VuePartialStats from "./_partials/_VuePartialStats.vue";
import VuePartialHeading from "./_partials/_VuePartialHeading.vue";
import VuePartialCustomDictionaries from "./_partials/_VuePartialCustomDictionaries.vue";
import VuePartialNativeDictionaries from "./_partials/_VuePartialNativeDictionaries.vue";

const meta: TMetaInformation = {
  lang: "en",
  title: `Glossary`,
  description: ``,
  ogImage: ``,
};

const role: TRole = getRole(Astro);
---

<LayoutSettings meta={meta}>
  <VuePartialStats role={role} client:load />
  <VuePartialHeading role={role} client:load />
  <VuePartialCustomDictionaries role={role} client:load />
  <VuePartialNativeDictionaries role={role} client:load />
</LayoutSettings>
